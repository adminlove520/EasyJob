{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r backend/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd backend && alembic upgrade head && uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHONPATH": "backend",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "SECRET_KEY": "${{SECRET_KEY}}",
        "OPENROUTER_API_KEY": "${{OPENROUTER_API_KEY}}",
        "BACKEND_CORS_ORIGINS": "https://chat-resume-five.vercel.app,https://chatresu.vercel.app,https://localhost:3000",
        "DINGTALK_CLIENT_ID": "${{DINGTALK_CLIENT_ID}}",
        "DINGTALK_CLIENT_SECRET": "${{DINGTALK_CLIENT_SECRET}}",
        "DINGTALK_REDIRECT_URI": "https://chat-resume-five.vercel.app/auth/dingtalk/callback",
        "GITHUB_CLIENT_ID": "${{GITHUB_CLIENT_ID}}",
        "GITHUB_CLIENT_SECRET": "${{GITHUB_CLIENT_SECRET}}",
        "GITHUB_REDIRECT_URI": "https://chat-resume-five.vercel.app/auth/github/callback"
      }
    }
  }
}